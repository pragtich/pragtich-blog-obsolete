<feed xmlns="http://www.w3.org/2005/Atom">
  <id>http://members.home.nl/pragtich/</id>
  <title>Joris Pragt's blog feed</title>
  <updated>2012-06-21T22:00:00Z</updated>
  <link href="http://members.home.nl/pragtich/" rel="alternate"/>
